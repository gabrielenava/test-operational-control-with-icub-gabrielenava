<application>

  <name>OPcontrol_app</name>

  <dependencies>
      <port>/icubSim/cam/left</port>
      <port>/icubSim/cam/right</port>
      <port>/icubSim/cartesianController/right_arm/state:o</port>    
      <port>/iKinGazeCtrl/rpc</port>
  </dependencies>

  <module>
      <name>OP_control</name>
      <workdir>/home/gnava/Software/test-operational-control-with-icub-gabrielenava/build</workdir>
      <environment>YARP_FORWARD_LOG_ENABLE=1</environment>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <environment>YARP_PORT_PREFIX=/LeftView</environment>
      <node>localhost</node>
  </module>

  <module>
      <name>yarpview</name>
      <environment>YARP_PORT_PREFIX=/RightView</environment>
      <node>localhost</node>
  </module>

  <connection>
   <from>/icubSim/cam/right</from>
   <to>/imgR:i</to>
   <protocol>tcp</protocol>
  </connection>

  <connection>
   <from>/icubSim/cam/left</from>
   <to>/imgL:i</to>
   <protocol>tcp</protocol>
  </connection>

  <connection>
   <from>/imgR:o</from>
   <to>/RightView/yarpview/img:i</to>
   <protocol>tcp</protocol>
  </connection>

  <connection>
   <from>/imgL:o</from>
   <to>/LeftView/yarpview/img:i</to>
   <protocol>tcp</protocol>
  </connection>

</application>


